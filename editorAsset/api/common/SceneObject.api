/**
 * 游戏对象：公共库仅表示游戏对象的数值数据
 * 复制时会遍历属性来复制，所以需要满足条件：
 * 1-属性有预设值
 * 2-属性是基元属性(string/number/boolean)
 * Created by 黑暗之神KDS on 2018-05-21 02:34:05.
 */
class SceneObject {
    /**
     * 事件：移动结束
     */
    static EVENT_MOVE_OVER: string = "ClientSceneObject_EVENT_MOVE_OVER";
    /**
     * 事件：跳跃结束
     */
    static EVENT_JUMP_OVER: string = "ClientSceneObject_EVENT_JUMP_OVER";
    //------------------------------------------------------------------------------------------------------
    // 基本属性
    //------------------------------------------------------------------------------------------------------
    /**
     * 对应的场景对象模型
     */
    modelID: number = 1;
    /**
     * 所在场景的sceneObject列表的位置
     */
    index: number = 0;
    /**
     * 名称
     */
    name: string = "";
    /**
     * 坐标x
     */
    x: number = 0;
    /**
    *  坐标y
    */
    y: number = 0;
    /**
     * 坐标z
     */
    z: number = 0;
    //------------------------------------------------------------------------------------------------------
    // 行走图
    //------------------------------------------------------------------------------------------------------
    /**
     * 对应的角色ID
     */
    avatarID: number = 1;
    /**
     * 角色的面向
     */
    avatarOri: number = 2;
    /**
     * 角色的动作:ID
     */
    avatarAct: number = 1;
    /**
     * 动作播放频率
     */
    avatarPlayInterval: number = 5;
    /**
     * 帧
     */
    avatarFrame: number = 0;
    /**
     * 透明度
     */
    avatarAlpha: number = 1;
    /**
     * 色相
     */
    avatarHue: number = 0;
    //------------------------------------------------------------------------------------------------------
    // 影子
    //------------------------------------------------------------------------------------------------------
    /**
    * 影子是否可用
    */
    shadowEnable: boolean = false;
    /**
     * 影子宽度
     */
    shadowWidth: number = 30;
    /**
     * 影子高度
     */
    shadowHeight: number = 15;
    /**
     * 影子透明度
     */
    shadowAlpha: number = 0.5;
    //------------------------------------------------------------------------------------------------------
    // 显示对象
    //------------------------------------------------------------------------------------------------------
    /**
     * type 1-指定AVATAR类 2-指定UI 3-指定UI类 4-指定动画 5-指定动画类1
     */
    displayList: {[varName:string]:{type: number, id: number}} = {};
    //------------------------------------------------------------------------------------------------------
    // 基本设置
    //------------------------------------------------------------------------------------------------------
    /**
     * 允许选中
     */
    selectEnabled: boolean = true;
    /**
     * 固定朝向
     */
    fixedOrientation: boolean = false;
    /**
     * 最前面显示
     */
    onTop: boolean = false;
    /**
     * 穿透：自身是否可被穿透
     */
    through: boolean = false;
    /**
     * 桥：可以将所在地强制变为无障碍效果
     */
    bridge: boolean = false;
    /**
     * 禁止动作
     */
    autoPlayEnable: boolean = true;
    /**
     * 体型
     */
    scale: number = 1;
    /**
     * 移动速度
     */
    speed: number = 200;
    /**
     * 碰触类别 0-格子 1-圆形范围 2-矩形范围
     */
    touchType: number = 0;
    /**
     * 矩形范围宽 px
     */
    touchW: number;
    /**
     * 矩形范围高 px
     */
    touchH: number;
    /**
     * 圆形范围半径 px
     */
    touchR: number;
    /**
     * 拥有控制权的玩家（所属玩家）
     */
    playerUID: number = 0;
}